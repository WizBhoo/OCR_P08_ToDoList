{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <p><strong>Auteur :</strong> {{ task.author ? task.author.username : 'Anonyme' }}</p>
        {{ form_start(form, {'action' : path('task_edit', { 'id' : task.id })}) }}
            {{ form_widget(form) }}

            <button type="submit" class="btn btn-success pull-right">Modifier</button>
        {{ form_end(form) }}

        <a href="{{ path('task_list_todo') }}" class="btn btn-primary">Retour à la liste des tâches</a>
    </div>
{% endblock %}
